<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PrismBugs.ViewModels"
             x:DataType="viewModels:LoginPageViewModel"
             x:Class="PrismBugs.Views.LoginPage">

    <Grid RowDefinitions="*,auto,auto,*" ColumnDefinitions="*" RowSpacing="60"
            Padding="30,0">
      
    <Button Grid.Row="1"
                Text="Go to TabbedPage11" 
                SemanticProperties.Hint="Click to TabbedPage11"
                Command="{Binding GoTabbedPage1Command}"
                HorizontalOptions="Center"/>

    <Button Grid.Row="2"
                Text="Login" 
                SemanticProperties.Hint="Click to Login"
                Command="{Binding LoginCommand}"
                HorizontalOptions="Center"/>
    </Grid>

</ContentPage>
